<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/eventCellLayout"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/layout_bg"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="#c6c6c6"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:clickable="false"
            android:src="@drawable/ic_baseline_access_time_filled_24"/>


        <TextView
            android:id="@+id/eventCellTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_marginRight="10dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:textSize="18dp"/>


        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_baseline_cancel_24"
            app:tint="@color/red" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:clickable="false"
                android:src="@drawable/ic_baseline_person_24"/>


            <TextView
                android:id="@+id/eventCellFeeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amazing"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="18dp"/>

        </LinearLayout>

        <Space
            android:layout_width="120dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:clickable="false"
                android:src="@drawable/ic_baseline_colorize_24"/>


            <TextView
                android:id="@+id/eventCellColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:clickable="false"
                android:src="@drawable/ic_sharp_star_24"/>


            <TextView
                android:id="@+id/eventCellType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type 4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="18dp"/>

        </LinearLayout>

        <Space
            android:layout_width="130dp"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="12dp"
                android:maxWidth="45dp"
                android:maxHeight="42dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sittingontoilet"
                app:tint="@android:color/black" />


            <TextView
                android:id="@+id/eventCellToiletTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 Min"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>

